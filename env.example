# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Google OAuth (for Login)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Google Calendar OAuth (for Calendar integration)
# ⚠️ Google Calendar API용 별도 OAuth 클라이언트가 필요할 수 있습니다
GOOGLE_CALENDAR_CLIENT_ID=your_google_calendar_client_id
GOOGLE_CALENDAR_CLIENT_SECRET=your_google_calendar_client_secret

# Naver OAuth
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Admin (comma-separated emails)
# ⚠️ 보안: NEXT_PUBLIC_ 접두사 없이 서버 사이드에서만 사용
ADMIN_EMAILS=admin@example.com

# Google Analytics
NEXT_PUBLIC_GA_ID=your_google_analytics_measurement_id

# Cron Secret (Vercel Cron 인증용)
CRON_SECRET=your_random_secret_key_here
